<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Admin ETI | Edit Investors Detail</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
  <!-- Navbar -->
  <% include files/header %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Edit Investors Detail</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Edit Investors Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="card card-primary">
        <!--<div class="card-header">
          <h3 class="card-title">Quick Example</h3>
        </div>-->
        <!-- /.card-header -->
        <!-- form start -->
        <form action="/edit-investors-deatil/<%= investors_deatil._id %>" method="post">
        <!-- <form action="add-new-investors" id="add-new-investors" method="post"> -->
          <div class="card-body">
            <div class="row">
              
              <% if (locals.errors) { %>
                    <% Object.values(errors).forEach(function(error){ %>

                      <div class="col-12 alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error.message %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>   
                    <% }); %>
                <% } %>
                <% if (locals.messages) { %>
                  <% Object.values(messages).forEach(function(message){ %>

                    <div class="col-12 alert alert-success alert-dismissible fade show" role="alert">
                      <%= message.message %>
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>   
                  <% }); %>
                  <script>setTimeout(function(){ window.location="/investors-list"; },2000);</script>
              <% } %>
            </div>
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_name">Investor Name *</label>
                  <input type="name" value="<%= investors_deatil.investor_name %>" name="investor_name" class="form-control" id="investor_name" placeholder="Enter Investor Name">
                </div>
              </div>
              <!-- <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_mobile">Investor Mobile Number *</label>
                  <input type="tel" value="<%= investors_deatil.investor_mobile %>" value="<%= investors_deatil.investor_name %>" name="investor_mobile" class="form-control" id="investor_mobile" placeholder="Enter Investor Mobile Number">
                </div>
              </div> -->
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_address">Investor Address *</label>
                  <input type="text" value="<%= investors_deatil.investor_address %>" name="investor_address" class="form-control" id="investor_address" placeholder="Enter Investor Address">
                </div>
              </div>
              
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="invested_amount">Invested Amount *</label>
                  <input type="text" value="<%= investors_deatil.invested_amount %>" name="invested_amount" class="form-control" id="invested_amount" placeholder="Enter Invested Amount">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="rate_of_interest">Rate of Interest *</label>
                  <input type="text" value="<%= investors_deatil.rate_of_interest %>" name="rate_of_interest" class="form-control" id="rate_of_interest" placeholder="Enter Rate of Interest">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="tenure_period_of_investment_month">Tenure/Period of Investment *</label>
                  <div class="row">
                    <div class="col-6">
                      <select class="form-control" name="tenure_period_of_investment_month" id="tenure_period_of_investment_month">
                        <option value="1">Select Month</option>
                      </select>
                    </div>
                    <div class="col-6">
                      <select class="form-control" name="tenure_period_of_investment_year" id="tenure_period_of_investment_year">
                        <option value="1">Select Year</option>
                      </select>
                    </div>
                  </div>
                  <!-- <input type="text" name="tenure_period_of_investment_month" class="form-control" id="tenure_period_of_investment_month" placeholder="Enter Tenure/Period of Investment"> -->
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="interest_pay_out_frequencies">Interest Pay-out Frequencies *</label>
                  <select class="form-control" name="interest_pay_out_frequencies" id="interest_pay_out_frequencies">
                    <option value="1">Select Frequencies</option>
                  </select>
                  <!-- <input type="text" name="interest_pay_out_frequencies" class="form-control" id="interest_pay_out_frequencies" placeholder="Enter Interest Pay-out Frequencies"> -->
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="interest_amount_to_be_paid_in_each_interval">Interest Amount to be paid in each interval *</label>
                  <input type="text" value="<%= investors_deatil.interest_amount_to_be_paid_in_each_interval %>" name="interest_amount_to_be_paid_in_each_interval" class="form-control" id="interest_amount_to_be_paid_in_each_interval" placeholder="Enter Interest Amount to be paid in each interval">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="investor_account_no">Investor Account No. *</label>
                  <input type="text" value="<%= investors_deatil.investor_account_no %>" name="investor_account_no" class="form-control" id="investor_account_no" placeholder="Enter Investor Account No.">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="account_ifsc_code">Account IFSC Code *</label>
                  <input type="text" value="<%= investors_deatil.account_ifsc_code %>" name="account_ifsc_code" class="form-control" id="account_ifsc_code" placeholder="Enter Account IFSC Code">
                </div>
              </div>
              <!--<div class="col-sm-6">
                <div class="form-group">
                  <label for="pan_card_no">PAN Card Number *</label>
                  <input type="text" value="<%= investors_deatil.investor_name %>" name="pan_card_no" class="form-control" id="pan_card_no" placeholder="Enter PAN Card Number">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="pan_card_copy">PAN Card Copy *</label>
                  <div class="input-group">
                    <div class="custom-file">
                      <input name="pan_card_copy" type="file" class="custom-file-input" id="pan_card_copy">
                      <label class="custom-file-label" for="pan_card_copy">Choose file</label>
                    </div>
                  </div>-->
                  <!-- <input type="file" name="pan_card_copy" class="form-control" id="pan_card_copy" placeholder="Enter "> -->
                <!-- </div>
              </div> -->
              
              
            </div>
          </div>
          <!-- /.card-body -->

          <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
      <b>Version</b> 3.0.5
    </div>
    <strong>Copyright &copy; 2014-2019 <a href="http://adminlte.io">AdminLTE.io</a>.</strong> All rights
    reserved.
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<!-- jQuery -->
<script src="/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="/dist/js/adminlte.min.js"></script>
<!-- jquery-validation -->
<script src="../../plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="../../plugins/jquery-validation/additional-methods.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="/dist/js/demo.js"></script>
<script>
 
  $(document).ready(function(e) {
    setTimeout(function(){ 
      $(".alert").alert('close');
    }, 10000);
    
  $('#add-new-admin').validate({
    rules: {
      name: {
        required: true,
      },
      employee_id: {
        required: true,
      },
      mobile: {
        required: true
      },
      designation: {
        required: true
      },
    },
    messages: {
      name:"Please enter a name",
      employee_id:"Please enter a employee id",
      mobile:"Please enter a mobile Number",
      designation: "Please enter a designation"
    },
    errorElement: 'span',
    errorPlacement: function (error, element) {
      error.addClass('invalid-feedback');
      element.closest('.form-group').append(error);
    },
    highlight: function (element, errorClass, validClass) {
      $(element).addClass('is-invalid');
    },
    unhighlight: function (element, errorClass, validClass) {
      $(element).removeClass('is-invalid');
    }
  });

  $('#add-new-investors').on('submit',function(e){
    //e.preventDefault(); 
    var form = $(this);
    console.log(form.serialize());
  });
});
</script>
</body>
</html>
